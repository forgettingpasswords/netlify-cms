{
  "lerna": "2.11.0",
  "packages": ["packages/*"],
  "version": "independent",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "loglevel": "success",
  "command": {
    "version": {
      "allowBranch": "DPL-LATEST",
      "conventionalCommits": true,
      "preid": "dpl",
      "gitRemote": "origin",
      "message": "chore(release): publish"
    }
  },
  "ignoreChanges": [
    "**/__fixtures__/**",
    "**/__tests__/**",
    "**/*.md"
  ]
}
